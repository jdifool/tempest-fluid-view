    "description": "A Fluid view renderer for Tempest PHP.",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^8.4",
        "tempest/framework": "^2.0",
        "typo3fluid/fluid": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Jdifool\\Tempest\\View\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jdifool\\Tempest\\View\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
